@model IEnumerable<onlineShop.Models.ProductCategory>
@{
    ViewData["Title"] = "CategoryList";
}


<div class="col-md-12 mx-auto pt-0 p-0 custom-border-shadow">
    <div>
        <a style="margin-left:520px" asp-action="addCategory">New Category</a>
   </div>
<div class="col-md-12 mx-auto pt-0 p-0 custom-border-shadow">
    <div class="col-md-12">
        <div>
            <table class="table table-responsive" style="margin-left:500px">
                <thead>
                    <tr>
                        <th>
                            CategoryId
                        </th>
                        <th>
                            CategoryName 
                        </th>
                        <th>
                            Image available
                        </th>
                        <th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                 <td>
                                    @Html.DisplayFor(modelItem => item.ProductCategoryId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductCategoryName)
                                </td>
                                <td>
                                    @if(item.ImageUrl == null){
                                        <td>
                                            <p>No Image Available</p>
                                        </td>
                                    }else{
                                         <td>
                                            <p>Image Available</p>
                                        </td>
                                    }
                                </td>    
                                <td>
                                    <a class="link-hover" asp-action="editCategory" asp-route-id="@item.ProductCategoryId">edit</a> |
                                    <a class="link-hover" asp-action="" asp-route-id="@item.ProductCategoryId">view</a> |
                                    <a class="link-hover" asp-action="" asp-route-id="@item.ProductCategoryId" onclick="return confirm('Are you sure you want to delete this category?')">delete</a> |
                                </td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>