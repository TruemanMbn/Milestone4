@model onlineShop.Models.ProductCategory
<div class="auth-container">
        <form asp-action="addCategory" style="margin-left:200px; margin-right:200px" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group">
                <label asp-for="ProductCategoryName" class="control-label"></label>
                <input asp-for="ProductCategoryName" class="form-control" />
                <span asp-validation-for="ProductCategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}